generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  apiKey    String?  @unique // API Key para dispositivos IoT (ESP32)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaci처n opcional con datos ambientales
  environmentalData EnvironmentalData[]
}

model EnvironmentalData {
  id        String   @id @default(cuid())
  counter   Int      @unique @default(0) // Contador secuencial para respuesta al ESP32
  tempAmb   Float? // Temperatura Ambiente en 째C
  humAmb    Float? // Humedad relativa Ambiental en %
  radiacion Float? // Radiaci처n terrestre (UV)
  humSuelo  Float? // Humedad de Suelo en %
  timestamp DateTime @default(now())

  // Relaci처n con usuario (opcional, si los datos son por usuario)
  userId String?
  user   User?   @relation(fields: [userId], references: [id])
}
